		</property>
		<property name="messageConverters">
			<bean id="jsonConverter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
				<property name="supportedMediaTypes" value="text/plain;charset=UTF-8"/>
			</bean>
